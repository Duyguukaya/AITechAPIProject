@model UpdateProjectDto
@{
    ViewData["Title"] = "UpdateProject";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h3>Proje Güncelleme Sayfası</h3>

<form method="post">
    <input type="hidden" asp-for="Id" />
    <label>Proje Başlığı</label>
    <input type="text" asp-for="Title" class="form-control" />
    <span class="text-danger" asp-validation-for="Title"></span>

    <br />
    <label>Resim Url</label>
    <input type="text" asp-for="ImageUrl" class="form-control" />
    <span class="text-danger" asp-validation-for="ImageUrl"></span>

    <br />
    <label>Kategori Adı</label>
    <select type="text" asp-for="CategoryId" class="form-control" asp-items="@ViewBag.categories">
        <option>Kategori Seçiniz</option>
    </select>
    <span class="text-danger" asp-validation-for="CategoryId"></span>

    <br />
    <button class="btn btn-primary">Kaydet</button>
</form>
