
@model List<ResultAboutDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var count = 0;
}

<h3>Kategoriler</h3>


<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Başlık</th>
        <th>Açıklama</th>
        <th>İşlemler</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;

        <tr>
            <td>@count</td>
            <td><img src="@item.ImageUrl" style="height:75px; width:75px; border-radius:50%" alt="Hakkında görseli" />  @item.Title</td>
            <td>@item.Description</td>
            <td>
                <a href="/Admin/About/DeleteAbout/@item.Id" class="btn btn-danger">Sil</a>
                <a href="/Admin/About/UpdateAbout/@item.Id" class="btn btn-info">Güncelle</a>
            </td>
        </tr>
    }
</table>

<a href="/Admin/About/CreateAbout" class="btn btn-primary">Yeni Hakkında Oluştur</a>

