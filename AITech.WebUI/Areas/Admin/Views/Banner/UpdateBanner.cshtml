@model UpdateBannerDto
@{
    ViewData["Title"] = "UpdateBanner";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h3>Banner Güncelleme Sayfası</h3>

<form method="post">
    <input type="hidden" asp-for="Id" />
    <label>Banner Başlığı</label>
    <input type="text" asp-for="Title" class="form-control" />
    <span class="text-danger" asp-validation-for="Title"></span>

    <br />
    <label>Banner Url</label>
    <input type="text" asp-for="ImageUrl" class="form-control" />
    <span class="text-danger" asp-validation-for="ImageUrl"></span>

    <br />
    <label>Banner Açıklama</label>
    <input type="text" asp-for="Description" class="form-control" />
    <span class="text-danger" asp-validation-for="Description"></span>

    <br />
    <button class="btn btn-primary">Kaydet</button>
</form>

