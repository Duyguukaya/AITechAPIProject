@model List<ResultChooseDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var count = 0;
}

<h3>Neden Bizi Seçmelisiniz</h3>


<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Başlık</th>
        <th>Açıklama</th>
        <th>Madde 1</th>
        <th>Madde 2</th>
        <th>Madde 3</th>
        <th>İşlemler</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;

        <tr>
            <td>@count</td>
            <td><img src="@item.ImageUrl" style="height:75px; width:75px; border-radius:50%" alt="Choose görseli" />  @item.Title</td>
            <td>@item.Description</td>
            <td>@item.Item1</td>
            <td>@item.Item2</td>
            <td>@item.Item3</td>
            <td>
                <a href="/Admin/Choose/DeleteChoose/@item.Id" class="btn btn-danger">Sil</a>
                <a href="/Admin/Choose/UpdateChoose/@item.Id" class="btn btn-info">Güncelle</a>
            </td>
        </tr>
    }
</table>

<a href="/Admin/Choose/CreateChoose" class="btn btn-primary">Yeni Seçilme Nedeni Oluştur</a>
