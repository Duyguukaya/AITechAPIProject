@model CreateChooseDto
@{
    ViewData["Title"] = "CreateChoose";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3>Yeni Choose Oluşturma Sayfası</h3>

<form method="post">
    <label>Hakkında Başlığı</label>
    <input type="text" asp-for="Title" class="form-control" />
    <span class="text-danger" asp-validation-for="Title"></span>
    <br />
    <label>Resim Url</label>
    <input type="text" asp-for="ImageUrl" class="form-control" />
    <span class="text-danger" asp-validation-for="ImageUrl"></span>

    <br />
    <label>Açıklama</label>
    <input type="text" asp-for="Description" class="form-control" />
    <span class="text-danger" asp-validation-for="Description"></span>

    <br />
    <label>Madde 1</label>
    <input type="text" asp-for="Item1" class="form-control" />
    <span class="text-danger" asp-validation-for="Item1"></span>

    <br />
    <label>Madde 2</label>
    <input type="text" asp-for="Item2" class="form-control" />
    <span class="text-danger" asp-validation-for="Item2"></span>

    <br />
    <label>Madde 3</label>
    <input type="text" asp-for="Item3" class="form-control" />
    <span class="text-danger" asp-validation-for="Item3"></span>

    <br />

    <button class="btn btn-primary">Kaydet</button>
</form>

